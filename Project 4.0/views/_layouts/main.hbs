<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>ANCDocument</title>
  <script src="js/jquery.min.js" type="text/javascript"></script>
  <script type="text/javascript" src="../js/jquery.easing.min.js"></script>
  <script type="text/javascript" src="../js/jquery.easy-ticker.js"></script>
  <link rel="stylesheet" href="../css/bootstrap.min.css">
  <link rel="stylesheet" href="../css/style.css">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">

  <!-- two -->

  <link href="img/favicon-1.ico" rel="shortcut icon" />

  <!-- Stylesheets -->
  <link rel="stylesheet" href="../css/flaticon.css" />
  <link rel="stylesheet" href="../css/slicknav.min.css" />
  <link rel="stylesheet" href="../css/jquery-ui.min.css" />
  <link rel="stylesheet" href="../css/owl.carousel.min.css" />
  <link rel="stylesheet" href="../css/animate.css" />
  <link rel="stylesheet" href="../css/style1.css" />
  <link rel="stylesheet" href="../css/stylemakehands.css">
  <link rel="stylesheet" type="text/css" href="../css/style-1.css">

  <style>
    div#headDiv {
      height: 78px;
      background-color: #d9534f;
    }

    span.beforePic {
      color: white;
    }

    .header-logo {
      text-align: center;
    }

    a.textHover h5:hover {
      text-decoration: none;
      color: red;
      cursor: pointer;
    }

    img:hover {
      opacity: 0.5;
      filter: alpha(opacity=50);
      /* For IE8 and earlier */
    }

    span.ctg {
      color: black;
      font-size: 17px;
      font-weight: bold;
      font-family: "Arimo", sans-serif;
    }

    .body-color {
      background: #f0f1f4;
    }

    .header-color {
      background: #fff;
    }

    .ts-grid-box {
      position: relative;
      margin-bottom: 30px;
      padding: 30px;
      background: #fff;
      -webkit-box-shadow: 0px 2px 2px 0px rgba(0, 0, 0, 0.08);
      box-shadow: 0px 2px 2px 0px rgba(0, 0, 0, 0.08);
    }

    .ts-grid-box.ts-category-title {
      padding: 18px 30px;
      background: #0a4a7a;
    }

    .ts-grid-box.ts-category-title .ts-title {
      margin-bottom: 0;
    }

    .ts-title {
      margin-bottom: 25px;
      position: relative;
      background: #0a4a7a;
      color: ghostwhite;
      font-size: 20px;
      line-height: 21px;
      font-family: proxima-nova, Helvetica, Arial, sans-serif;
      letter-spacing: .04em;
    }

    .float-left {
      float: left !important;
    }

    .dropdown {
      position: relative;
      display: inline-block;
    }

    .dropdown-content {
      display: none;
      position: absolute;
      background-color: #f5f5f5;
      z-index: 1;
      list-style: none;
    }

    .dropdown:hover .dropdown-content {
      display: block;
    }
  </style>
</head>

<body class="body-color">
  <section>
    <div class="container-fluid" style="background-color: black">
      <div class="row">
        <div class="col-md-12 align-self-center">
          <div class="header-logo">
            <a href="#">
              <img src='../images/logo/logo.png' alt="gg">
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
  <header class="header-color">
    <nav class="navbar navbar-expand-lg navbar-dark">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">
            <img src='../logo.jpg' alt="TTS News" width="55px" height="55px" style="margin: -30% -30% -30% -30%">
          </a>
        </div>
        <button class="navbar-toggler btn-danger active" type="button" data-toggle="collapse"
          data-target="#navHeaderCollapse">
          <span class="navbar-toggler-icon">

          </span>
        </button>
        <div class="collapse navbar-collapse" id="navHeaderCollapse">
          <ul class="navbar-nav mr-auto">
            {{#each parentMenu}}
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="/categories/{{id}}">
                <span class="ctg">{{name}}</span></a>
              <div class="dropdown-content bg-dark">
                {{#each childs}}
                <a class="dropdown-item text-white" href="/categories/{{id}}">{{name}}</a>
                {{/each}}
              </div>
            </li>
            {{/each}}
          </ul>
        </div>
        <div class="col-sm-3 col-sm-offset-3">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Tìm kiếm">
            <div class="input-group-append">
              <button class="btn btn-warning" type="submit"><i class="fas fa-search"></i></button>
            </div>
          </div>
        </div>
        <ul class="nav nav-tabs ml-auto bg-dark">
          <li class="nav-item">
            <a class="nav-link" href="/login"><i class="fa fa-user" aria-hidden="true"></i>
              <span style="color: #C4FFFFFF; font-size: 17px;"> {{userName}} </span>
            </a>
          </li>
        </ul>
      </div>
    </nav>
  </header>

  <!-- Nội dung -->
  {{{body}}}

  <div style="background-color: black;">
    <div style="background-color: black;height: 30px;">

    </div>
    <footer>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <ul class="list-inline text-center">
              <li class="list-inline-item">
                <a href="#">
                  <span class="fa-stack fa-lg">
                    <i class="fas fa-circle fa-stack-2x"></i>
                    <i class="fab fa-twitter fa-stack-1x fa-inverse"></i>
                  </span>
                </a>
              </li>
              <li class="list-inline-item">
                <a href="#">
                  <span class="fa-stack fa-lg">
                    <i class="fas fa-circle fa-stack-2x"></i>
                    <i class="fab fa-facebook-f fa-stack-1x fa-inverse"></i>
                  </span>
                </a>
              </li>
            </ul>
            <p class="copyright text-muted"
              style="text-align: center;font-weight: bold;font-size: 17px; margin-top: 20px;margin-bottom: 30px;">
              Copyright &copy; Your Website 2019</p>
          </div>
        </div>
      </div>
    </footer>
  </div>


  <script type="text/javascript">
    $(document).ready(function () {
      var dd = $('.vticker').easyTicker({
        direction: 'up',
        easing: 'easeInOutBack',
        speed: 'slow',
        interval: 2000,
        height: 'auto',
        visible: 1,
        mousePause: 0
      }).data('easyTicker');
    });
  </script>
  <script src="js/bootstrap.min.js"></script>

  <!--====== Javascripts & Jquery of Two======-->

  <script src="js/jquery.min.js"></script>
  <script src="js/jquery.slicknav.min.js"></script>
  <script src="js/owl.carousel.min.js"></script>
  <script src="js/jquery.nicescroll.min.js"></script>
  <script src="js/jquery.zoom.min.js"></script>
  <script src="js/jquery-ui.min.js"></script>
  <script src="js/main.js"></script>
  <script src="js/popper.min.js"></script>
  <script src="js/script.js"></script>



</body>

</html>
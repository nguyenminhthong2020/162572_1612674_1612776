<section>
    <div class="container">
      <div style="text-align: left;">
            <br><br>
            <a class="btn btn-danger" href="/" role="button">Quay về trang chủ</a>
            <br><br><br><br>
      </div>
      <div class="section-title">
        <h2 style="text-align: left; color: black;">{{#each thisCate}}{{name}}{{/each}}</h2>
      </div>
      <br>      
      
       <div class="container" style="width: 99%;">
        {{#each listPost}}
         <div class="row">
           <div class="col-lg-5 col-sm-6 pr-lg-1">
            <a href="/posts/{{id}}" target="_self">
             <img class="imgbaiviet" src="{{avatar}}" style="width: 99%;height: 300px;">
           </a>
           </div>
           <div class="col-lg-7 col-sm-6 pr-lg-1">
            <a href="/posts/{{id}}" target="_self"
                class="textHover1"><h4 style="color: black;">{{title}}</h4></a>
            <a href="/categories/{{#each thisCate}}{{id}}{{/each}}"><strong>{{#each thisCate}}{{name}}{{/each}}</strong></a>
            <br>
            {{shortDate}}
            <br>
              <a href=""><span class="badge badge-success">Tags</span></a>              
           </div>
         </div>
           <hr>
        {{/each}}
           <div class="phan-trang">
                <ul class="pagination justify-content-center" style="margin:50px 0">
                    <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                     <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                </ul>
        </div>
       </div>
    </div>
</section>
            

<div class="container" style="margin-top: 72px;">
	<div class="row" style="margin-bottom: 35px;text-align: right;" >
		<div class="col-md-12">
			<a href="../manage-tag/add" class="btn btn-success" style="font-weight: bold;font-size: 23px;">
			<i class="fa fa-plus"></i>THÊM TAGS</a>
		</div>
	</div>
	<div class="panel panel-default">
		<div class="panel-heading" style="margin-bottom: 15px;">
			<h2 style="font-weight: bold; color: #029a00">DANH SÁCH TAGS</h2>
		</div>
		<!-- /.panel-heading -->
		<div class="panel-body">
			<div class="table-responsive">
				<table class="table table-bordered table-hover">
					<thead class="thead-dark" style="font-size: 17px;text-align: left;">
						<tr>
							<th>ID</th>
							<th>Tags</th>
							<th>Số lượt dùng</th>
							<th>Thao tác</th>
						</tr>
					</thead>
					<tbody style="font-size: 16px;background-color: white;">
                        {{#each listTag}}
						<tr>
							<td>{{id}}</td>
							<td>{{name}}</td>
							<td>{{amount}}</td>
							<td>
							<a href="/tags/{{id}}" class="btn btn-info">Xem</a>
                            <a href="../edit-tag/{{id}}" class="btn btn-primary">Sửa</a>
							<button class="btn btn-danger">Xóa</button>							
							</td>
						</tr>
                        {{/each}}		
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div> 

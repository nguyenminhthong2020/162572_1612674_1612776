<section class="top-letest-product-section">
        <div class="container">
          <div class="ts-grid-box clearfix ts-category-title">
            <h2 class="ts-title float-left">THÊM CHUYÊN MỤC</h2>
          </div>

          <div class="container bootstrap snippet">
            <div class="row">
              <div class="col-sm-12">
                <div class="tab-content">
                  <div class="tab-pane active" id="home">
                    <form method="post" id="registrationForm">
                      <div class="form-group">                          
                        <div class="col-xs-6">
                          <label for="p_title"><h4 class="text-muted">&nbsp;Tên chuyên mục</h4></label>
                          <input type="text" class="form-control" name="p_title" id="p_title" placeholder="" title="">
                        </div>
                      </div>
                      <div class="form-group">                          
                        <div class="col-xs-6">
                          <label for="p_parent"><h4 class="text-muted">&nbsp;Chuyên mục cha</h4></label><br>
                          <select name="p_parent" class="form-control">                            
                            {{#each listParentCate}}
                            <option value={{id}}>{{name}}</option>
                            {{/each}}
                            <option value=0>Làm trống</option>
                          </select> 
                        </div>
                      </div>

                  <div class="form-group">
                   <div class="col-xs-12">
                    <br>
                    <button class="btn btn-lg btn-success" type="submit"><i class="glyphicon glyphicon-ok-sign"></i> Save</button>
                    <button class="btn btn-lg" type="reset"><i class="glyphicon glyphicon-repeat"></i> Reset</button>
                  </div>
                </div>
              </form>
              
            </div><!--/tab-pane-->
          </div><!--/tab-content-->

        </div><!--/col-9-->
      </div><!--/row-->
    </div><!--container-fluid-->
  </section>
